---
import { Image } from '@astrojs/image/components';
import { Button, Container, Icon, Text } from '../components';
import { HomeHeroImage } from '../assets/home';
import { Envelope } from 'svelte-heros-v2';

interface Props {
  contactEmail: string;
  donateUrl: string;
  donateText: string;
}

const { contactEmail, donateUrl, donateText } = Astro.props;
---

<div class='py-8 md:py-16'>
  <Container>
    <div class='flex flex-col md:flex-row-reverse gap-4 bg-white rounded-lg'>
      <div class='flex justify-center w-full md:w-1/2'>
        <Image
          alt='hero'
          src={HomeHeroImage}
          width={960}
          height={1280}
          class='rounded-lg'
        />
      </div>

      <div
        class='w-full md:w-1/2 flex flex-col justify-center gap-6 p-5 lg:p-10'
      >
        <div class='grid gap-3'>
          <h1>Jacqueline Griffin For Rochester School Board</h1>
          <Text size='heading-md'>
            A commitment to quality education for every child!
          </Text>
        </div>

        <div class='flex flex-col md:flex-row items-center gap-4 md:gap-8'>
          <div class='w-full md:w-1/2'>
            <Button fluid href={donateUrl}>
              {donateText}
            </Button>
          </div>

          <div class='w-full md:w-1/2 flex justify-center'>
            <a
              class='inline-flex items-center gap-2 text-lg'
              href={`mailto:${contactEmail}`}
            >
              <Icon icon={Envelope} />
              Get In Contact</a
            >
          </div>
        </div>
      </div>
    </div>
  </Container>
</div>
