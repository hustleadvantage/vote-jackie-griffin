---
import '../../styles/app.scss';
import Analytics from './analytics.astro';
import { Header } from './header';

interface Props {
  title: string;
}

const { title } = Astro.props;

const analyticsMeasurementId = import.meta.env
  .PUBLIC_GOOGLE_ANALYTICS_MEASUREMENT_ID;

const useAnalytics = false;
---

<!DOCTYPE html>
<html class='h-full' lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta
      name='viewport'
      content='width=device-width,initial-scale=1,maximum-scale=1'
    />
    <link rel='icon' type='image/svg+xml' href='/favicon.ico' />
    <meta name='generator' content={Astro.generator} />
    <title>{`Vote Jackie Griffin - ${title}`}</title>

    {useAnalytics && <Analytics measurementId={analyticsMeasurementId} />}
  </head>

  <body class='h-full bg-neutral-50'>
    <div class='h-full flex flex-col'>
      <Header />
      <main class='flex-1'>
        <slot />
      </main>
    </div>
  </body>
</html>

<script>
  import 'preline/dist/preline';
</script>
