---
import { ArrowRight } from 'svelte-heros-v2';
import { Container, Icon } from '../../../components';

interface Props {
  announcement: { message: string; action?: { text: string; url: string } };
}

const { announcement } = Astro.props;
const { message, action } = announcement;
---

{
  !!announcement && (
    <div class='w-full py-2 bg-gradient-to-tr from-secondary-500 to-accent-500 text-white'>
      <Container>
        <div class='relative w-full flex flex-col md:flex-row justify-center items-center gap-2'>
          <div class='flex-shink'>
            <p class='text-center lg:text-left text-white'>{message}</p>
          </div>

          {!!action && (
            <div class='flex-shink'>
              <a
                class='inline-flex items-center gap-2 font-semibold'
                href={action.url}
                target='_blank'
              >
                {action.text}
                <Icon icon={ArrowRight} size='20' />
              </a>
            </div>
          )}
        </div>
      </Container>
    </div>
  )
}
