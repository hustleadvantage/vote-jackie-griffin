---
type Size = 'xs' | 'sm' | 'md' | 'lg' | 'xl';

interface Props {
  class?: string;
  size?: Size;
}

const { class: className = '', size = 'lg' } = Astro.props;

const baseStyles = 'mx-auto px-4 md:px-5';

const sizes: Record<Size, string> = {
  xs: 'max-w-[400px] ',
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-screen-xl',
};
---

<div class={`${className} ${baseStyles} ${sizes[size]}`}>
  <slot />
</div>
